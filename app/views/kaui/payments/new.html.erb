<div class="page-header">
  <h1>Process Payment</h1>
</div>

<%= form_for @payment, :url => {:action => :create}, :html => {:class => 'form-horizontal'} do |f| %>
    <%= f.hidden_field :account_id %>
    <%= f.hidden_field :target_invoice_id %>

    <% if can? :external_payment, Kaui::Payment %>
        <div class='form-group'>
          <div class="col-sm-offset-2 col-sm-10">
            <div class="checkbox">
              <%= label_tag :external, :class => 'col-sm-2 control-label' do %>
                  <%= check_box_tag :external %>External Payment?
              <% end %>
            </div>
          </div>
        </div>
    <% end %>
    <div class="form-group">
      <%= f.label :purchased_amount, 'Amount', :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :purchased_amount, :id => 'payment_amount', :class => 'form-control' %>
        <p class="help-block"><%= @invoice.present? ? @invoice.currency : @account.currency %></p>
      </div>
    </div>
    <div class="form-group">
      <%= label_tag :reason, 'Reason', :class => 'col-sm-2 col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= select_tag :reason, options_for_select(Kaui::Payment::SAMPLE_REASON_CODES), :class => 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= label_tag :comment, 'Comment', :class => 'col-sm-2 col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= text_area_tag :comment, nil, :rows => 3, :class => 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= submit_tag 'Process payment', :class => 'btn btn-default' %>
      </div>
    </div>
<% end %>

<%= javascript_tag do %>
  $(document).ready(function() {
    $("#payment_amount").keydown(function(event) {
      preventNonNumericValues(event);
    });
  });
<% end %>
