<% if @credit_info.present? %>
  <table class="table table-striped table-bordered table-condensed">
    <thead>
      <tr>
        <th>Attribute</th>
        <th>Value</th>
      </tr>
    </thead>
    <tbody>
    <% @credit_info.keys.sort.each do |key| %>
      <tr>
        <td><%= key %></td>
        <td><%= @credit_info[key] %></td>
      </tr>
    <% end %>
  </table>
<% else %>
  <p>Credit info not found</p>
<% end %>