<% payment_methods.each do |payment_method| %>
    <div class="toggler">

      <div class="first-line">
        <% if payment_method.is_default %>
            <a href="#"><i class="fa fa-star default-payment-method"></i></a>
        <% else %>
            <% if can? :create, Kaui::PaymentMethod %>
                <%= link_to '<i class="fa fa-star-o non-default-payment-method"></i>'.html_safe, kaui_engine.set_default_payment_method_account_path(payment_method.account_id, :params => {:payment_method_id => payment_method.payment_method_id}), :method => :put, :confirm => 'Are you sure you want to make this payment method default?' %>
            <% else %>
                <a href="#"><i class="fa fa-star-o non-default-payment-method"></i></a>
            <% end %>
        <% end %>

        <%= payment_method.plugin_name %>

        <% if can? :delete, Kaui::PaymentMethod %>
            <% if payment_method.is_default %>
                <%= link_to '<i class="fa fa-times"></i>'.html_safe, kaui_engine.payment_method_path(payment_method.payment_method_id, :params => {:set_auto_pay_off => 'true'}), :method => :delete, :confirm => 'Are you sure you want to delete this payment method?' %>
            <% else %>
                <%= link_to '<i class="fa fa-times"></i>'.html_safe, kaui_engine.payment_method_path(payment_method.payment_method_id), :method => :delete, :confirm => 'Are you sure you want to delete this payment method?' %>
            <% end %>
        <% end %>

        <i class="fa fa-caret-down"></i>
        <i class="fa fa-caret-up"></i>
        <span class="expires"><!-- TODO --></span>
      </div>

      <div class="toggle">

        <% if can? :trigger, Kaui::Payment %>
            <div class="actions">
              <% %w(AUTHORIZE PURCHASE CREDIT).each do |transaction_type| %>
                  <%= link_to "<i class='fa fa-plus-square'></i>&nbsp;#{transaction_type.downcase.camelize}".html_safe, kaui_engine.new_account_transaction_path(payment_method.account_id,
                                                                                                                                                                 :currency => account.currency,
                                                                                                                                                                 :payment_method_id => payment_method.payment_method_id,
                                                                                                                                                                 :transaction_type => transaction_type) %>
              <% end %>
            </div>
        <% end %>

        <%= render :partial => 'kaui/payment_methods/payment_methods_details_table', :locals => {:payment_method => payment_method} %>

      </div>

    </div>
<% end %>
